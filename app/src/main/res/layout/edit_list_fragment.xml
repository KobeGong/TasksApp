<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/editTaskListBackground"
    android:orientation="vertical">

    <include layout="@layout/horizontal_separator" />

    <EditText
        android:id="@+id/edit_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="@string/list_title_hint"
        android:inputType="none|text|textCapSentences|textAutoComplete|textMultiLine"
        android:maxLength="@integer/max_task_list_title_size"
        android:maxLines="1"
        android:paddingLeft="@dimen/edit_list_start_spacing"
        android:paddingTop="@dimen/edit_list_top_spacing"
        android:paddingRight="@dimen/edit_list_start_spacing"
        android:paddingBottom="@dimen/edit_list_bottom_spacing"
        android:textAppearance="@style/EditListNameTextAppearance"
        android:textColorHint="@color/google_grey600" />

    <include layout="@layout/horizontal_separator" />
</LinearLayout>
